<% if !@product.taxons.blank? %>
    <div id="taxon-crumbs" data-hook class="alpha columns five omega">
        <h3 class="product-section-title"><%= Spree.t(:look_for_similar_items) %></h3>
        <div data-hook="product_taxons">
            <ul id="similar_items_by_taxon" data-hook>
                <% @product.taxons.each do |taxon| %>
                    <li>
                        <%= link_to taxon.name, seo_url(taxon), :class => "btn btn-similar" %>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>
