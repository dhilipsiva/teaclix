<% content_for :sidebar do %>
    <div data-hook="homepage_sidebar_navigation">
        <%= render :partial => 'spree/shared/taxonomies' %>
    </div>
<% end %>
<% cache [I18n.locale, current_currency, @product] do %>
    <div  class="row transitionfx" data-hook="product_show" itemscope itemtype="http://schema.org/Product">
        <% @body_id = 'product-details' %>
        <div class="col-lg-6 col-md-6 col-sm-6" data-hook="product_left_part">
            <div data-hook="product_left_part_wrap">
                <div id="product-images" data-hook="product_images">
                    <div id="main-image" class="sp-wrap no-padding" data-hook>
                        <%= render :partial => 'image' %>
                    </div>
                    <div id="thumbnails" data-hook>
                        <%= render :partial => 'thumbnails' %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-5" data-hook="product_right_part">
            <div class="row" data-hook="product_right_part_wrap">
                <div id="product-description" data-hook="product_description">
                    <h1 class="product-title" itemprop="name"><%= accurate_title %></h1>
                    <div class="details-description" itemprop="description" data-hook="description">
                        <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
                    </div>
                    <hr />
                    <div data-hook="product_properties">
                        <%= render :partial => 'properties' %>
                    </div>
                    <div data-hook="promotions">
                        <%= render :partial => 'promotions' %>
                    </div>
                    <hr />
                    <div id="cart-form" data-hook="cart_form">
                        <%= render :partial => 'cart_form' %>
                    </div>
                </div>
                <%= render :partial => 'taxons' %>
            </div>
        </div>
    </div>
<% end %>
