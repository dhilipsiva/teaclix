<footer id="footer" class="footer" data-hook>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
                <h3>
                    Support
                </h3>
                <ul>
                    <li class="supportLi">
                        <h4>
                            <a class="inline" href="callto:+919901765962">
                                <strong>
                                    <%= fa_icon 'phone' %>
                                    (+91) 9901765962
                                </strong>
                            </a>
                        </h4>
                        <h4>
                            <a class="inline" href="mailto:rajendran.sivaiah@gmail.com">
                                <%= fa_icon 'envelope-o' %>
                                rajendran.sivaiah@gmail.com
                            </a>
                        </h4>
                    </li>
                </ul>
            </div>
            <% taxoes = Spree::Taxonomy.where(:name => ["categories", "manufacturers"]) %>
            <% taxoes.each do |taxonomy| %>
                <% cache [I18n.locale, taxonomy, 1] do %>
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                        <h3><%= Spree.t(taxonomy.name) %></h3>
                        <ul>
                            <%= sidebar_taxons_tree(taxonomy.root, @taxon, 1) %>
                        </ul>
                    </div>
                <% end %>
            <% end %>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                <h3>
                    My Account
                </h3>
                <ul>
                    <li>
                        <a href="/account">
                            My Account
                        </a>
                    </li>
                    <li>
                        <a href="/wishlist">
                            Wishlist
                        </a>
                    </li>
                    <li>
                        <a href="/account">
                            Order list
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 ">
                <h3>
                    Stay in touch
                </h3>
                <ul>
                    <li>
                        <div id="chimpy-container" class="input-append newsLatterBox text-center">
                            <% @subscriber ||= Spree::Chimpy::Subscriber.new %>
                            <%= form_for @subscriber do |f| %>
                                <div>
                                    <%= f.email_field :email, class:"full text-center", placeholder: Spree.t(:email) %>
                                    <%= f.submit value: 'Submit', class:"btn  bg-gray", type:"submit" %>
                                </div>
                            <% end %>
                        </div>
                    </li>
                </ul>
                <ul class="social">
                    <li>
                        <a href="http://facebook.com">
                            <%= fa_icon 'facebook' %>
                        </a>
                    </li>
                    <li>
                        <a href="http://twitter.com">
                            <%= fa_icon 'twitter' %>
                        </a>
                    </li>
                    <li>
                        <a href="https://plus.google.com">
                            <%= fa_icon 'google-plus' %>
                        </a>
                    </li>
                    <li>
                        <a href="http://youtube.com">
                            <%= fa_icon 'pinterest' %>
                        </a>
                    </li>
                    <li>
                        <a href="http://youtube.com">
                            <%= fa_icon 'youtube' %>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row footer-bottom">
            <p>
                &copy; TeaClix 2014. All right reserved.
            </p>
        </div>
    </div>
</footer>
