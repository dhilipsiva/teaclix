<div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7">
        <div class="row userInfo">
            <div class="col-xs-12 col-sm-6 col-sm-offset-6">
                <h1 class="section-title-inner text-center"><span><i class="fa fa-lock"></i> Login</span></h1>
                <%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path, role: "form", id: "password-credentials" do |f| %>
                    <div class="form-group">
                        <%= f.label :email, Spree.t(:email) %><br />
                        <%= f.email_field :email, :class => 'form-control', :tabindex => 1, autofocus: true, placeholder: Spree.t(:email) %>
                    </div>
                    <div class="form-group">
                        <%= f.label :password, Spree.t(:password) %><br />
                        <%= f.password_field :password, :class => 'form-control', :tabindex => 2, placeholder: "Password" %>
                    </div>
                    <div class="form-group">
                        <%= f.check_box :remember_me, :tabindex => 3 %>
                        <%= f.label :remember_me, Spree.t(:remember_me) %>
                    </div>
                    <%= f.submit Spree.t(:login), :class => 'btn btn-primary', :tabindex => 4 %>
                <% end %>
            </div>
        </div>
    </div>
</div>
