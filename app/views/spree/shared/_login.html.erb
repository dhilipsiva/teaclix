<% @content_class="col-lg-12 col-md-12 col-sm-12" %>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4 text-center" data-hook="login">
        <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Login</span></h1>
        <%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path, role: "form" do |f| %>
            <div class="form-group">
                <%= f.email_field :email, :class => 'form-control', :tabindex => 1, autofocus: true, placeholder: Spree.t(:email) %>
            </div>
            <div class="form-group" id="password-credentials">
                <%= f.password_field :password, :class => 'form-control', :tabindex => 2, placeholder: Spree.t(:password) %>
            </div>
            <div class="form-group">
                <%= f.check_box :remember_me, :tabindex => 3 %>
                <%= f.label :remember_me, Spree.t(:remember_me) %>
            </div>
            <div class="form-group">
                <%= f.submit Spree.t(:login), :class => 'btn btn-primary', :tabindex => 4 %>
            </div>
        <% end %>
    </div>
</div>
