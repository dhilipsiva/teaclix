<% @content_class="col-lg-12 col-md-12 col-sm-12" %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4 text-center" id="forgot-password">
        <h1 class="section-title-inner"><%= Spree.t(:forgot_password) %></h1>
        <p><%= Spree.t(:instructions_to_reset_password) %></p>
        <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
            <div class="form-group">
                <%= f.email_field :email, :class => 'form-control', :tabindex => 1, autofocus: true, placeholder: Spree.t(:email) %>
            </div>
            <div class="form-group">
                <%= f.submit Spree.t(:reset_password), :class => 'btn btn-primary', :tabindex => 4 %>
            </div>
        <% end %>
    </div>
</div>

